---
// import from the assets the text
import json from "../../../assets/info.json";
import BioAboutMe from "./bio_about_me.tsx";

const title = json.title;
const name = json.fullName;
const bioTitle = json.aboutMeTitle;
---

<div class="flex flex-col mx-10">
  <h1 class="text-5xl font-bold text-gray-900 dark:text-gray-100">{name}</h1>
  <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mt-1">
    {title}
  </h3>
  <h4 class="text-lg font-semibold text-gray-900 dark:text-gray-100 my-2">
    {bioTitle}
  </h4>

  <BioAboutMe client:load />
</div>
